$system-list__border = 1px solid #BDBDBD
$system-list__border-radius = 4px

.system-list__item
  border-top $system-list__border
  border-right $system-list__border
  border-left $system-list__border
  padding 15px
  font-weight 500

.system-list__item:first-child
  border-radius $system-list__border-radius $system-list__border-radius 0 0

.system-list__item:last-child
  border-bottom $system-list__border
  border-radius 0 0 $system-list__border-radius $system-list__border-radius

.system-list__system-name
  col(2/3)
  float left
  fs 0.75rem

.system-list__system-status
  col(1/3)
  text-align right
  fs 0.6rem
  color green
