@import 'jeet'

.status
  color white
  overflow hidden
  margin-bottom 75px

.status--operational
  @extend .status
  area green

.status--not-found
  @extend .status
  area yellow

.status--defective
  @extend .status
  area red

.status--unknown
  @extend .status
  area orange

.status__title
  col(2/3)

.status__refresh-time
  col(1/3)
  fs 0.55rem
  text-align right
  color rgba(255, 255, 255, 0.8)
